{
    "compilerOptions": {
        "outDir": "./built",
        "sourceMap": true,
        "allowJs": true,
        "target": "ES2017",
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true
    },
    "include": ["./**/*"],
    "exclude": ["./bin/**/*", "./built/**/*"]
}
