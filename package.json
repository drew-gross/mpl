{
    "name": "mpl",
    "version": "0.0.1",
    "description": "A compiler for a Mutable Programming Langauge",
    "repository": "https://github.com/drew-gross/mpl",
    "license": "UNLICENSED",
    "main": "built/index.js",
    "ava": {
        "files": [
            "built/test.js"
        ]
    },
    "scripts": {
        "benchmark": "rimraf built && tsc && node ./built/benchmark.js",
        "benchmark-debug": "rimraf built && tsc && node --inspect --inspect-brk ./built/benchmark.js",
        "": "",
        "lint": "tslint --project ./tsconfig.json",
        "lint-fix": "tslint --fix --project ./tsconfig.json",
        "test": "rimraf built && tsc && ava --verbose && npm run lint && npm run format",
        "test-debug": "tsc && node --inspect --inspect-brk node_modules/ava/profile.js built/test.js",
        "test-fast": "tsc && ava --verbose",
        "test-all": "npm run test && npm run benchmark",
        "test-watch": "parallelshell 'ava --watch --no-color' 'tsc --watch'",
        "compile": "tsc",
        "compile-watch": "tsc --watch",
        "test-case": "tsc && node ./built/debug-test-case.js",
        "test-case-debug": "tsc && node --inspect --inspect-brk ./built/debug-test-case.js",
        "test-case-profile": "tsc && node_modules/.bin/0x ./built/debug-test-case.js",
        "cloc": "cloc --exclude-dir=node_modules,built --not-match-f='npm-shrinkwrap.json|package.json|tsconfig.json|prettier-config.json|test.ts|test-utils.ts' .",
        "cloc-all": "cloc --exclude-dir=node_modules,built . --not-match-f='npm-shrinkwrap.json'",
        "cloc-test": "cloc  ./test.ts ./test-cases.ts",
        "format": "prettier --config package.json --list-different '**/*.ts'",
        "build+install": "tsc && npm link"
    },
    "bin": {
        "dump-builtins-to-cfg-svg": "built/bin/dump-builtins-to-cfg-svg.js"
    },
    "author": "Drew Gross",
    "dependencies": {
        "0x": "4.9.1",
        "@types/node": "12.12.7",
        "ava": "2.4.0",
        "chalk": "2.4.2",
        "child-process-promise": "2.2.1",
        "commander": "4.0.0",
        "deepcopy": "2.0.0",
        "fs-extra": "8.1.0",
        "graphlib": "2.1.7",
        "graphlib-dot": "0.6.2",
        "inquirer": "7.0.0",
        "lodash": "4.17.15",
        "node": "13.1.0",
        "omit-deep": "0.3.0",
        "parallelshell": "3.0.2",
        "prettier": "1.19.1",
        "rimraf": "3.0.0",
        "tmp-promise": "2.0.2",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.7.2"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "devDependencies": {
        "shuffle-seed": "^1.1.6"
    }
}
