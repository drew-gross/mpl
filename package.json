{
    "name": "mpl",
    "version": "0.0.1",
    "description": "A compiler for a Mutable Programming Langauge",
    "repository": "https://github.com/drew-gross/mpl",
    "license": "UNLICENSED",
    "main": "built/index.js",
    "ava": {
        "files": [
            "built/test.js"
        ]
    },
    "scripts": {
        "test": "rimraf built && npm run prettier-check && tsc && ava --verbose",
        "test-fast": "tsc && ava --verbose",
        "test-watch": "ava --watch --no-color",
        "tsc-watch": "tsc --watch",
        "build+install": "tsc && npm link",
        "test-debug": "tsc && inspect node_modules/ava/profile.js built/test.js",
        "cloc": "cloc --exclude-dir=node_modules,built --not-match-f='npm-shrinkwrap.json|package.json|tsconfig.json|prettier-config.json|test.ts|test-utils.ts' .",
        "cloc-all": "cloc --exclude-dir=node_modules,built . --not-match-f='npm-shrinkwrap.json'",
        "prettier-check": "prettier --config package.json --list-different '**/*.ts'"
    },
    "bin": {
        "dump-builtins-to-cfg-svg": "built/bin/dump-builtins-to-cfg-svg.js"
    },
    "author": "Drew Gross",
    "dependencies": {
        "child-process-promise": "2.2.1",
        "fs-extra": "7.0.0",
        "lodash": "4.17.10",
        "tmp-promise": "1.0.5",
        "@types/node": "10.5.5",
        "ava": "0.25.0",
        "graphlib": "2.1.5",
        "graphlib-dot": "0.6.2",
        "inspect-process": "0.5.0",
        "opn": "5.3.0",
        "prettier": "1.14.0",
        "rimraf": "2.6.2",
        "typescript": "3.0.3"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    }
}
