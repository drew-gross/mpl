{
    "name": "mpl",
    "version": "0.0.1",
    "description": "A compiler for a Mutable Programming Langauge",
    "repository": "https://github.com/drew-gross/mpl",
    "license": "UNLICENSED",
    "main": "built/index.js",
    "ava": {
        "files": [
            "built/test.js"
        ]
    },
    "scripts": {
        "benchmark": "rimraf built && tsc && node ./built/benchmark.js",
        "test": "rimraf built && npm run prettier-check && tsc && ava --verbose && tslint --project ./package.json  ./**/*.ts",
        "test-fast": "tsc && ava --verbose",
        "test-all": "npm run test && npm run benchmark",
        "test-watch": "ava --watch --no-color",
        "tsc": "tsc",
        "tsc-watch": "tsc --watch",
        "build+install": "tsc && npm link",
        "test-debug": "tsc && inspect node_modules/ava/profile.js built/test.js",
        "debug-test-case": "tsc && node ./built/debug-test-case.js",
        "cloc": "cloc --exclude-dir=node_modules,built --not-match-f='npm-shrinkwrap.json|package.json|tsconfig.json|prettier-config.json|test.ts|test-utils.ts' .",
        "cloc-all": "cloc --exclude-dir=node_modules,built . --not-match-f='npm-shrinkwrap.json'",
        "prettier-check": "prettier --config package.json --list-different '**/*.ts'"
    },
    "bin": {
        "dump-builtins-to-cfg-svg": "built/bin/dump-builtins-to-cfg-svg.js"
    },
    "author": "Drew Gross",
    "dependencies": {
        "@types/node": "10.12.9",
        "ava": "0.25.0",
        "child-process-promise": "2.2.1",
        "clone": "2.1.2",
        "commander": "2.19.0",
        "fs-extra": "7.0.1",
        "graphlib": "2.1.5",
        "graphlib-dot": "0.6.2",
        "inquirer": "6.2.1",
        "inspect-process": "0.5.0",
        "lodash": "4.17.11",
        "omit-deep": "0.3.0",
        "prettier": "1.15.2",
        "rimraf": "2.6.2",
        "tmp-promise": "1.0.5",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.16.0",
        "typescript": "3.1.6"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    }
}
