{
  "name": "mpl",
  "version": "0.0.1",
  "description": "A compiler for a Mutable Programming Langauge",
  "repository": "https://github.com/drew-gross/mpl",
  "license": "UNLICENSED",
  "main": "built/index.js",
  "ava": {
    "files": ["built/test.js"]
  },
  "scripts": {
    "test": "rimraf built && npm run prettier-check && tsc && ava --verbose",
    "test-watch": "ava --watch --no-color",
    "tsc-watch": "tsc --watch",
    "test-debug": "tsc && inspect --debug-exception node_modules/ava/profile.js built/test.js",
    "cloc": "cloc --exclude-dir=node_modules,built .",
    "prettier-check": "prettier --config prettier-config.json --list-different *.ts"
  },
  "author": "Drew Gross",
  "dependencies": {
    "child-process-promise": "2.2.1",
    "fs-extra": "5.0.0",
    "tmp-promise": "1.0.4"
  },
  "devDependencies": {
    "@types/node": "8.5.1",
    "ava": "0.24.0",
    "inspect-process": "0.5.0",
    "prettier": "1.10.2",
    "rimraf": "2.6.2",
    "typescript": "2.6.2"
  }
}
